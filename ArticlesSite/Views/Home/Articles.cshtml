@model IEnumerable<ArticlesSite.Models.Artilce>


@{
    ViewBag.Title = "Articles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (Model.Count() > 0)
    {

        <h2 class="text-uppercase text-center text-secondary bounce animated mt-5"
            style="font-family: Cairo, sans-serif;font-size:35px;">
            @Model.First().Category.Name
        </h2>
        <hr class="star-dark mb-5 p-0" />
        <div class="row row-cols-3 mb-3">
            @foreach (var item in Model)
            {
                <div class="col"
                     data-bss-hover-animate="pulse"
                     style="margin: 0; margin-top: 10px">
                    <div class="card" style="margin: 10">
                        <img class="card-img-top w-100 d-block" style="height:300px;"
                             src="~/Uploads/Artilce/@item.ImageUrl" />
                        <div class="card-body">
                            <h4 class="text-center card-title"
                                style="font-family: Cairo, sans-serif">
                                @item.Name
                            </h4>
                            @Html.ActionLink("قراءة", "ReadArticles", "Home", new { id = item.Id }, new
                            {
                                @class = "btn btn-primary float-end",
                                role = "button" ,
                                style = "font-family: Cairo, sans-serif; width: 149.875px"
                            })
                        </div>
                    </div>
                </div>
            }


        </div>
    }
    else if (Model.Count() < 1)
    {
        <div class="text-black-50 text-center" style="margin-block:300px;  font-size:45px;">
            لا تتوفر اي مقالة في هذا القسم حتى الان
        </div>
    }





</div>
